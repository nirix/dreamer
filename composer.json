    "type": "project",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Nirix",
            "email": "nrx@nirix.net"
        }
    ],
    "autoload": {
